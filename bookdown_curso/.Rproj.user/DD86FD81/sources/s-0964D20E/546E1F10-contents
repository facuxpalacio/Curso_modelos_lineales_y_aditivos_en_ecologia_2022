
x<-c(5,6,7.5,9,10,12,13,14.5)
y<-2*x+rnorm(8,mean=0,sd=2)
m<-lm(y~x+I(x^2)+I(x^3)+I(x^4)+I(x^5)+I(x^6)+I(x^7))
new<-seq(min(x),max(x),length=500)
newy<-predict(m,newdata=data.frame(x=new))
plot(x,y,pch=19,col="blue",cex=2.5,ylim=c(7.3,34)) 
lines(new,newy)
abline(h=mean(y),lwd=1.5,lty=2)
abline(lm(y~x),lwd=2)
